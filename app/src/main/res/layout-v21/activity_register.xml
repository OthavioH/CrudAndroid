<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_register2"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/lblPreencha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Preencha todos os campos"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                />

            <TextView android:id="@+id/lblNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Nome"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/lblPreencha"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtNome"
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:background="@drawable/custom_input_lessround"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblNome"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <TextView android:id="@+id/lblCPF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="CPF"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/edtNome"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtCPF"
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:paddingLeft="15dp"
                android:background="@drawable/custom_input_lessround"
                android:inputType="number"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblCPF"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <TextView android:id="@+id/lblEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Email"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/edtCPF"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtEmail"
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:background="@drawable/custom_input_lessround"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblEmail"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <TextView android:id="@+id/lblDDD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="DDD"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/edtEmail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtDDD"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:maxLength="2"

                android:background="@drawable/custom_input_lessround"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblDDD"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <TextView android:id="@+id/lblTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Telefone"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/edtEmail"
                app:layout_constraintStart_toEndOf="@+id/lblDDD"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtTelefone"
                android:layout_width="200dp"
                android:layout_height="40dp"

                android:background="@drawable/custom_input_lessround"
                android:inputType="phone"
                android:paddingLeft="15dp"
                android:textColor="@color/black"

                app:layout_constraintStart_toEndOf="@+id/edtDDD"
                app:layout_constraintTop_toBottomOf="@+id/lblTelefone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <TextView android:id="@+id/lblSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Senha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/edtDDD"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtSenha"
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:paddingLeft="15dp"
                android:hint="NO MÍNIMO 6 CARACTERES"
                android:background="@drawable/custom_input_lessround"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblSenha"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <TextView android:id="@+id/lblConfirmarSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Confirme a Senha"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/edtSenha"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtConfirmarSenha"
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:background="@drawable/custom_input_lessround"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblConfirmarSenha"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <Button android:id="@+id/btnRegistrarCadastro"
                android:layout_width="120dp"
                android:layout_height="50dp"

                android:text="Cadastrar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/btn_roxo"

                app:layout_constraintTop_toBottomOf="@+id/edtConfirmarSenha"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"/>

            <Button android:id="@+id/btnCancelarCadastro"
                android:layout_width="120dp"
                android:layout_height="50dp"

                android:text="Cancelar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/btn_vermelho"

                app:layout_constraintTop_toBottomOf="@+id/edtConfirmarSenha"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"/>




        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>