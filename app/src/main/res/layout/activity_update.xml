<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/lblPreenchaUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Preencha todos os campos"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                />

            <TextView android:id="@+id/lblNomeUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Nome"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/lblPreenchaUpdate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtNomeUpdate"
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:background="@drawable/custom_input_lessround"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblNomeUpdate"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <TextView android:id="@+id/lblCPFUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="CPF"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/edtNomeUpdate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtCPFUpdate"
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:paddingLeft="15dp"
                android:background="@drawable/custom_input_lessround"
                android:inputType="number"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblCPFUpdate"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <TextView android:id="@+id/lblEmailUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Email"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="23sp"

                app:layout_constraintTop_toBottomOf="@+id/edtCPFUpdate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText android:id="@+id/edtEmailUpdate"
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:background="@drawable/custom_input_lessround"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblEmailUpdate"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/lblTelefoneUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:text="Telefone"
                android:textColor="@color/black"
                android:textSize="23sp"

                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/edtEmailUpdate"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                tools:layout_editor_absoluteX="105dp" />

            <EditText
                android:id="@+id/edtTelefoneUpdate"
                android:layout_width="200dp"
                android:layout_height="40dp"

                android:background="@drawable/custom_input_lessround"
                android:inputType="phone"
                android:paddingLeft="15dp"

                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/lblTelefoneUpdate"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                tools:layout_editor_absoluteX="110dp" />

            <TextView
                android:id="@+id/lblSenhaUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Senha"
                android:textColor="@color/black"
                android:textSize="23sp"

                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="286dp"
                app:layout_constraintTop_toBottomOf="@id/edtTelefoneUpdate"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"/>
            <EditText android:id="@+id/edtSenhaUpdate"
                android:layout_width="300dp"
                android:layout_height="40dp"

                android:paddingLeft="15dp"
                android:hint="NO MÍNIMO 6 CARACTERES"
                android:background="@drawable/custom_input_lessround"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblSenhaUpdate"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                />


            <Button android:id="@+id/btnAtualizarUsuario"
                android:layout_width="120dp"
                android:layout_height="50dp"

                android:text="Atualizar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/btn_roxo"

                app:layout_constraintTop_toBottomOf="@+id/edtSenhaUpdate"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"/>

            <Button android:id="@+id/btnCancelarUpdate"
                android:layout_width="120dp"
                android:layout_height="50dp"

                android:text="Cancelar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/btn_vermelho"

                app:layout_constraintTop_toBottomOf="@+id/edtSenhaUpdate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>